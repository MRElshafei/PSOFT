@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="../Pages/Dashboard" title="Manage" style="padding-top: 25px; font-weight: bolder">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link  btn btn-link text-dark" style="padding-top: 25px; font-weight: bolder">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="" asp-area="Identity" asp-page="/Account/Register" style="padding-top: 30px; font-weight: bolder">Register</a>
        &nbsp;
        &nbsp;
    </li>

    <li class="nav-item">
        <a class="" asp-area="Identity" asp-page="/Account/Login" style="padding-top:30px; font-weight:bolder">Login</a>
    </li>
}

